    <!--
        Added the entity Meeting.
    -->
    <changeSet id="20260224094536-1" author="jhipster">
        <createTable tableName="meeting">
            <column name="id" type="bigint" autoIncrement="true" startWith="1500">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="start_time" type="${datetimeType}">
                <constraints nullable="false" />
            </column>
            <column name="end_time" type="${datetimeType}">
                <constraints nullable="false" />
            </column>
            <column name="mode" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="online_link" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="objectives" type="${clobType}">
                <constraints nullable="true" />
            </column>
            <column name="note" type="${clobType}">
                <constraints nullable="true" />
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="created_at" type="${datetimeType}">
                <constraints nullable="false" />
            </column>
            <column name="submitted_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="approved_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="canceled_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="type_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="level_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="organizer_department_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="room_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="requester_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="host_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="meeting" columnName="start_time" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="meeting" columnName="end_time" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="meeting" columnName="created_at" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="meeting" columnName="submitted_at" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="meeting" columnName="approved_at" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="meeting" columnName="canceled_at" columnDataType="${datetimeType}"/>
    </changeSet>

