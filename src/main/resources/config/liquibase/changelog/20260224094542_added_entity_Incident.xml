    <!--
        Added the entity Incident.
    -->
    <changeSet id="20260224094542-1" author="jhipster">
        <createTable tableName="incident">
            <column name="id" type="bigint" autoIncrement="true" startWith="1500">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="${clobType}">
                <constraints nullable="true" />
            </column>
            <column name="reported_at" type="${datetimeType}">
                <constraints nullable="false" />
            </column>
            <column name="severity" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="reported_by_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="meeting_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="incident" columnName="reported_at" columnDataType="${datetimeType}"/>
    </changeSet>

